@model IEnumerable<OnlineShopping.Entities.Product>
@{
    ViewBag.Title = "ProductTable";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<h2>ProductTable</h2>

<div>
    <form method="post">
        <input id="searchTxt" name="Search" placeholder="Search Product" />
        <button type="button" id="searchBtn">Search</button>
    </form>
    <br/>
    <button type="button" id="newBtn">Create New Product</button>
</div>
<table>
    <thead>
        <tr>
            <td>Product Name</td>
            <td>Description</td>
            <td>Category</td>
            <td>Price</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if(item.Category!=null)
                    {
                        <text>@item.Category.Name</text>
                    }
                    else
                    {
                        <text> - </text>
                    }
                </td>
                <td>@item.Price</td>
                <td>
                    <button class="edtBtn" data-id="@item.ID">Edit</button>
                    <button class="dltBtn" data-id="@item.ID">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $("#searchBtn").click(function () {
        var searcValue = $("#searchTxt").val();
        //alert(searcValue);
        $.ajax({
            url: '/Product/ProductTable',
            data: {
                search: searcValue
            }
        })
            .done(function (response) {
                $("#Tablecontainer").html(response);
            })
            .fail(function () {
                alert("Fail");
            });
    });

    //add new product 25.07.2019
    $("#newBtn").click(function () {
        //alert("new");
        $.ajax({
            url: '/Product/Create',
        })
            .done(function (response) {
                $("#actionContainer").html(response);
            })
            .fail(function () {
                alert("Fail");
            });
    });
        //edit product 26.07.2019
        $(".edtBtn").click(function () {
            $.ajax({
                url: '/Product/Edit',
                data:
                {
                    ID: $(this).attr('data-id')
                }
            })
                .done(function (response) {
                    $("#actionContainer").html(response);
                })
                .fail(function () {
                    alert("Fail");
                });
        });

        //delete product 26.07.2019
        $(".dltBtn").click(function () {
            var confirmDelete = confirm("Are you sure you want to delete this product?");
            if (confirmDelete) {
                $.ajax({
                    type: 'Post',
                    url: '/Product/Delete',
                    data:
                    {
                        ID: $(this).attr('data-id')
                    }
                })
                    .done(function (response) {
                        $("#Tablecontainer").html(response);
                    })
                    .fail(function () {
                        alert("Fail");
                    });
            }

        });
</script>



@*@model OnlineShopping.Entities.Product*@
@model List<Category>
@{
    ViewBag.Title = "Create";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<h2>Create</h2>
<form id="createProduct">
    <label>Category</label>
    <select name="CategoryID">
        @foreach (var category in Model)
        {
            <option value="@category.ID">@category.Name</option>
        }
    </select>
    <label>Product Name</label>
    <input name="Name" />
    @*<input id="wqname" name="Name" />*@
    <br />
    <label>Description</label>
    <input name="Description" />
    @*<input id="wqdescrip" name="Description" />*@
    <br />
    <label>Price</label>
    <input name="Price" />
    <br />
    <button type="button" id="saveBtn">Create</button>
</form>

<script>
    $("#saveBtn").click(function () {
        //var wqname = $("#wqname").val();
        //var wqdescrip = $("#wqdescrip").val();
        //console.log(wqname+"========"+wqdescrip);
        //return false;
        //alert("button clicked");
        $.ajax({
            type: 'post',
            url: '/Product/Create',
            //either
            //data: {
            //    Name:'' ,
            //    Description:'',
            //    Price:''
            //or
            data: $("#createProduct").serialize()
        })
            .done(function (response) {
                $("#Tablecontainer").html(response);
                $("#actionContainer").html("");
            })
            .fail(function () {
                alert("Fail");
            });
    });
</script>

@model OnlineShopping.Entities.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form id="editProduct">
    <input type="hidden" name="ID" value="@Model.ID" />
    <br/>
    <label>Name</label>
    <input name="Name" value="@Model.Name" />
    <br/>
    <label>Description</label>
    <input name="Description" value="@Model.Description" />
    <br/>
    <label>Price</label>
    <input name="Price" value="@Model.Price" />
    <br/>
    <button id="updatBtn" type="button">Update</button>
</form>

<script>
    $("#updatBtn").click(function () {
        //var wqname = $("#wqname").val();
        //var wqdescrip = $("#wqdescrip").val();
        //console.log(wqname+"========"+wqdescrip);
        //return false;
        alert("button clicked");
        $.ajax({
            type: 'post',
            url: '/Product/Edit',
            data: $("#editProduct").serialize()
        })
            .done(function (response) {
                $("#Tablecontainer").html(response);
                $("#actionContainer").html("");
            })
            .fail(function () {
                alert("Fail");
            });
    });
</script>
